{
  "file_types": {
    "env": [
      ".env",
      ".env.*"
    ]
  },
  "hidden_files": [
    "**/.wrangler",
    "**/.tanstack",
    "**/.claude"
  ],
  "file_scan_exclusions": [
    "**/.wrangler",
    "**/.tanstack"
  ],
  "languages": {
    "HTML": {
      "code_actions_on_format": {
        "source.fixAll.biome": true,
        "source.organizeImports.biome": true
      },
      "formatter": {
        "language_server": {
          "name": "biome"
        }
      }
    },
